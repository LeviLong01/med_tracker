<h2 align="center"> Medication: <%= @medication.medicationname %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @medication.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li><%= link_to gravatar_for(@medication.user), user_path(@medication.user) %></li>
          <li class="medication-title">
            <%= link_to @medication.user.username, user_path(@medication.user) %>
          </li>
          <li><small>
            <%= pluralize(@medication.user.medications.count, "medicaiton") if @medication.user.medications %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Unit Value:</strong></h4>
  <hr>
  <%= @medication.unitvalue %>
  <h4 class="center description"><strong>Unit Measurement:</strong></h4>
  <hr>
  <%= @medication.unitmeasurement %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@medication.description) %>

  <div class="medication-actions">
    <%= link_to "Edit this medication", edit_medication_path(@medication), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this article", medication_path(@medication), method: :delete, data: { confirm: "Are you sure " +
                "you want to delete the medication?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all medications", medications_path, class: "btn btn-xs btn-success" %>
  </div>
</div>