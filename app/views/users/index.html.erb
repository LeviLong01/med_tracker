<h1 align="center">All MedTracker Users</h1>
<div align="center">
  <% @users.each do |user|  %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="medication-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.medications.count, "medicaiton") if user.medications %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>